<div class="center jumbotron" id="searchInput">
  <div class="row">
    <div class="col-10">
      <h3>Events near <%= params[:q] %></h3>
    </div>
    <div class="col-2">
      <button type="button" class="btn" id="toggleSearch">Edit</button>
    </div>
  </div>
</div>

<script type="text/javascript">

  document.getElementById('toggleSearch').onclick = function() {
    $(document.getElementById('searchForm')).toggle();
    $(document.getElementById('searchInput')).toggle();
  }

</script>
